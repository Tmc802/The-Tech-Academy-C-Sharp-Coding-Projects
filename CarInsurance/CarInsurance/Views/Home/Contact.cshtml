@{
    ViewBag.Title = "Contact";
}

<h2>Contact:</h2>

<div class="container">

    <img class="contactTeamPhoto" src="~/SuccessfulPeople.jpeg" />
    <fieldset class="container">

        <!--Form-->
        <div class="">
            <div class="form-group">
                <h2>How can we help you?</h2>
                <div class="custom-control custom-radio">
                    <input type="radio" id="customRadio1" name="customRadio" class="custom-control-input" checked="">
                    <label class="custom-control-label" for="customRadio1">Careers</label>
                </div>
                <div class="custom-control custom-radio">
                    <input type="radio" id="customRadio2" name="customRadio" class="custom-control-input">
                    <label class="custom-control-label" for="customRadio2">Policy Questions</label>
                </div>
                <div class="custom-control custom-radio">
                    <input type="radio" id="customRadio3" name="customRadio" class="custom-control-input">
                    <label class="custom-control-label" for="customRadio3">Other</label>
                </div>
            </div>

            <div class="form-group row">
                <label for="staticEmail" class="col-sm-1 col-lg-1 col-form-label">Email:</label>
                <div class="col-md-1">
                    <input type="text" readonly="" class="form-control-plaintext" id="staticEmail" value="YourEmail@Address.com">
                </div>
            </div>

            <div class="form-group">
                <label for="exampleTextarea">Please enter your message below</label>
                <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
            </div>

            <div class="form-group submitBtnBox">
                <input class="btn-primary" type="submit" value="Submit" />
            </div>

            <div class="styleInline">
                <div>Our Office</div>
                <p>3762 Colfax ave. Denver, CO 80001</p>
                <p>Office Hours: M-F 8am-5pm</p>
                <p>Closed Sat/Sun</p>
            </div>
        </div>
        <!--End Form-->
    </fieldset>





</div>
