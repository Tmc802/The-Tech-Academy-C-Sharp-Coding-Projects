<div id="FreeQuote" class="row">
    <fieldset>
        <div class="col-md-12 main-form">
            <h2>Submit your info below to find your new auto policy quote</h2>
            <div class="formStyle">
                @using (Html.BeginForm("ViewQuote", "Home", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="fName">First Name:</label>
                        <input type="text" name="firstName" id="fName" value="First Name" required />
                    </div>

                    <div class="form-group">
                        <label for="lName">Last Name:</label>
                        <input type="text" name="lastName" id="lName" value="Last Name" required />
                    </div>

                    <div class="form-group">
                        <label for="email">Email Address:</label>
                        <input type="email" name="emailAddress" id="email" value="Email Address" required />
                    </div>

                    <div class="form-group">
                        <label for="DOB">Date Of Birth:</label>
                        <input type="date" name="DOB" id="DOB" required />
                    </div>

                    <div class="form-group">
                        <label for="carYear">Car Year:</label>
                        <input type="number" name="carYear" id="carYear" value="Year" required />
                    </div>

                    <div class="form-group">
                        <label for="carMake">Car Make:</label>
                        <input type="text" name="carMake" id="carMake" value="Make" required />
                    </div>

                    <div class="form-group">
                        <label for="Car Model">Car Model:</label>
                        <input type="text" name="carModel" id="carModel" value="Model" required />
                    </div>

                    <div class="form-group">
                        <label for="DUI">Have you ever had a DUI? Please answer Yes or No:</label>
                        <input type="text" name="DUI" id="DUI" value="Yes or No" required />
                    </div>

                    <div class="form-group">
                        <label for="speedingTickets">How many speeding tickets do you have? Please enter a number:</label>
                        <input type="number" name="speedingTickets" id="speedingTickets" value="Enter a number here" required />
                    </div>

                    <div class="form-group">
                        <label for="fullCoverage">Would you like full coverage or liability? Please answer Yes or No:</label>
                        <input type="text" name="fullCoverage" id="fullCoverage" value="Yes or No" required />
                    </div>

                    <div class="form-group center-text submitBtnBox">
                        <input class="btn-primary" type="submit" value="Submit" />
                    </div>
                }
            </div>

        </div>
    </fieldset>
</div>

